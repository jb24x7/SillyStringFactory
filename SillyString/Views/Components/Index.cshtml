@{
  Layout = "_Layout";
}

@using ElectronicsVendor.Models;

<h2>Components</h2>

@if (@Model.Count == 0)
{
  <h3>No components have been added yet!</h3>
}

<ul class="component-list">
  @foreach (Component component in Model)
  {
    <a href='@Url.Action("Details", new { id = component.ComponentId })'>
      <li>
        Manufacturer: @component.Manufacturer
      </li> 
      <li>
        Name: @component.Name
      </li> 
      <li>
        Price: $@component.Price
      </li> 
      <li>
        Type: @component.Type
      </li> 
    </a>
  }
</ul>

<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  <a href='@Url.Action("Create", "Components")'>
    <button class="green">Create new component</button>
  </a>
</div>


