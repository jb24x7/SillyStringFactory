@{
  Layout = "_Layout";
}

@using SillyString.Models;

<h2>Engineers</h2>

@if (@Model.Count == 0)
{
  <h3>No egineers have been added yet!</h3>
}

<ul class="egineer-list">
  @foreach (Engineer egineer in Model)
  {
    <a href='@Url.Action("Details", new { id = egineer.EngineerId })'>
 
      <li>
        Name: @egineer.Name
      </li> 

    </a>
  }
</ul>

<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  <a href='@Url.Action("Create", "Engineers")'>
    <button class="green">Create new egineer</button>
  </a>
</div>


