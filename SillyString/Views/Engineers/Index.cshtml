@{
  Layout = "_Layout";
}

@using SillyString.Models;

<h2>Egineers</h2>

@if (@Model.Count == 0)
{
  <h3>No egineers have been added yet!</h3>
}

<ul class="egineer-list">
  @foreach (Egineer egineer in Model)
  {
    <a href='@Url.Action("Details", new { id = egineer.EgineerId })'>
      <li>
        Manufacturer: @egineer.Manufacturer
      </li> 
      <li>
        Name: @egineer.Name
      </li> 
      <li>
        Type: @egineer.Type
      </li> 
    </a>
  }
</ul>

<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  <a href='@Url.Action("Create", "Egineers")'>
    <button class="green">Create new egineer</button>
  </a>
</div>


