@{
  Layout = "_Layout-Admin";
}
@model SillyString.Models.Egineer
@using SillyString.Models

<h2>Create a new egineer</h2>

@using (Html.BeginForm())
{
  <div class="form-row">
  @Html.Label("Manufacturer")
  @Html.DropDownListFor(model => model.Manufacturer, new SelectList(ViewBag.Manufacturers, "Name", "Name"))
  </div>
  <div class="form-row">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
  </div>
  <div class="form-row">
  @Html.Label("Select Type")
  @Html.DropDownListFor(model => model.Type, new SelectList(ViewBag.Types, "Name", "Name"))
  </div>
  <button class="green" type="submit">Save</button>
}

<div class="button-area">
  <a href='@Url.Action("Index")'>
    <button>Cancel</button>
  </a>
</div>