@{
  Layout = "_Layout-Admin";
}
@model SillyString.Models.Egineer

<h2>Add a machine for egineer <span class="highlighted">@Html.DisplayFor(model => model.Type)</span></h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EgineerId)
  <div class="form-row">
    @Html.Label("Select machine")
    @Html.DropDownList("MachineId")
    <button class="green" type="submit">Save</button>
  </div>
}

<div class="button-area">
  <a href='@Url.Action("Details", "Egineers", new { id = Model.EgineerId})'>
    <button>Cancel</button>
  </a>
</div>
