@{
  Layout = "_Layout";
}
@using ElectronicsVendor.Models;

<h2>Vendors</h2>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}
else
{
  <ul class="vendor-list">
  @foreach (Vendor vendor in Model)
  {
    <li>@Html.ActionLink($"{vendor.Name}", "Details", new { id = vendor.VendorId })</li>
  }
  </ul>
}
<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  <a href='@Url.Action("Create")'>
    <button class="green">Create new vendor</button>
  </a>
</div>

